#:kivy 2.0.0

#:include source/app/global.kv

<MainScreen>:
    box_layout: box_layout
    forget_button: forget_button
    know_button: know_button
    next_button: next_button
    not_know_button: not_know_button
    previous_button: previous_button
    word_antonym: word_antonym
    word_examples: word_examples
    word_meaning: word_meaning
    word_name: word_name
    word_synonym: word_synonym
    word_translation: word_translation

    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: 1
            BoxLayout:
                id: box_layout
                orientation: 'vertical'
                size_hint_y: None

                ScrollLabel:
                    color: font_color
                    font_size: '30dp'
                    halign: 'center'
                    id: word_name
                    padding: '0dp', '40dp'
                    text: 'name'

                ScrollLabel:
                    color: font_color
                    font_size: '25dp'
                    padding: '5dp', '5dp'
                    text: 'Translation'

                LineSeparator:

                ScrollLabel:
                    color: font_color
                    font_size: '17dp'
                    id: word_translation
                    padding: '30dp', '10dp'
                    text: 'translation'

                ScrollLabel:
                    color: font_color
                    font_size: '25dp'
                    padding: '5dp', '5dp'
                    text: 'Definition'

                LineSeparator:

                ScrollLabel:
                    color: font_color
                    font_size: '17dp'
                    id: word_meaning
                    padding: '30dp', '10dp'
                    text: 'meaning'

                ScrollLabel:
                    color: font_color
                    font_size: '25dp'
                    padding: '5dp', '5dp'
                    text: 'Synonyms'

                LineSeparator:

                ScrollLabel:
                    color: font_color
                    font_size: '17dp'
                    id: word_synonym
                    padding: '30dp', '10dp'
                    text: 'synonym'

                ScrollLabel:
                    color: font_color
                    font_size: '25dp'
                    padding: '5dp', '5dp'
                    text: 'Antonyms'

                LineSeparator:

                ScrollLabel:
                    color: font_color
                    font_size: '17dp'
                    id: word_antonym
                    padding: '30dp', '10dp'
                    text: 'antonym'

                ScrollLabel:
                    color: font_color
                    font_size: '25dp'
                    padding: '5dp', '5dp'
                    text: 'Examples'

                LineSeparator:

                ScrollLabel:
                    color: font_color
                    font_size: '17dp'
                    id: word_examples
                    padding: '30dp', '10dp'
                    text: 'example'

                Widget:
                    height: '30dp'
                    size_hint: 1, None

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '158dp'
            BoxLayout:
                height: '54dp'
                orientation: 'horizontal'
                padding: '0dp', '2dp'
                size_hint_y: None
                spacing: '2dp'
                Button:
                    background_color: button_color
                    color: font_color
                    id: know_button
                    on_press: self.background_color = button_pressed_color
                    on_release: self.background_color = button_color
                    text: 'Know'
                Button:
                    background_color: button_color
                    color: font_color
                    id: not_know_button
                    on_press: self.background_color = button_pressed_color
                    on_release: self.background_color = button_color
                    text: "Don't know"

            BoxLayout:
                height: '50dp'
                orientation: 'horizontal'
                size_hint_y: None
                Button:
                    background_color: button_color
                    color: font_color
                    id: forget_button
                    on_press: self.background_color = button_pressed_color
                    on_release: self.background_color = button_color
                    text: "Don't show"

            BoxLayout:
                height: '54dp'
                orientation: 'horizontal'
                padding: '0dp', '2dp'
                size_hint_y: None
                spacing: '2dp'
                Button:
                    background_color: button_color
                    color: font_color
                    id: previous_button
                    on_press: self.background_color = button_pressed_color
                    on_release: self.background_color = button_color
                    text: 'Previous'
                Button:
                    background_color: button_color
                    color: font_color
                    id: next_button
                    on_press: self.background_color = button_pressed_color
                    on_release: self.background_color = button_color
                    text: 'Next'
