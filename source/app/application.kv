#:kivy 2.0.0

#:include source/app/global.kv

<Area>:
    edit_screen: edit_screen
    multi_screen: multi_screen
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (0.02, 0.098, 0.137, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    MultiScreen:
        id: multi_screen
        size_hint: 1, 9
        MainScreen:
            name: 'main'
        SearchScreen:
            name: 'search'
        ListScreen:
            name: 'list'
        EditScreen:
            id: edit_screen
            name: 'edit'
        SettingsScreen:
            name: 'settings'

    LineSeparator:

    BoxLayout:
        size_hint: 1, 1
        spacing: 0
        HomeButton:
            Button:
                background_color: button_color
                color: font_color
                on_press: self.background_color = button_pressed_color
                on_release: root.change_to_home()
                on_release: self.background_color = button_color
                text: 'Home'
        SearchButton:
            Button: 
                background_color: button_color
                color: font_color
                on_press: self.background_color = button_pressed_color
                on_release: root.change_to_search()
                on_release: self.background_color = button_color
                text: 'Search'
        ListButton:
            Button: 
                background_color: button_color
                color: font_color
                on_press: self.background_color = button_pressed_color
                on_release: root.change_to_list()
                on_release: self.background_color = button_color
                text: 'List'
        SettingsButton:
            Button: 
                background_color: button_color
                color: font_color
                on_press: self.background_color = button_pressed_color
                on_release: root.change_to_settings()
                on_release: self.background_color = button_color
                text: 'Settings'