#:kivy 2.0.0

#:include source/app/global.kv

<ListScreen>:
    box: box
    grid: grid
    results: results
    scroll_view: scroll_view
    counter: counter
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: box
            orientation: 'vertical'
            GridLayout:
                cols: 5
                id: grid
                size_hint: 1, 3
        BoxLayout:
            size_hint_y: None
            height: '20dp'
            Label:
                text: '0'
                id: counter
        ScrollView:
            id: scroll_view
            size_hint: 1, 3
            BoxLayout:
                id: results
                orientation: 'vertical'
                size_hint_y: None