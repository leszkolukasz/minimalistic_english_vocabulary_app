#:kivy 2.0.0

#:include source/app/global.kv

<EditScreen>:
    box_layout: box_layout
    level_input: level_input
    submit_button: submit_button
    word_antonym: word_antonym
    word_examples: word_examples
    word_meaning: word_meaning
    word_level: word_level
    word_name: word_name
    word_synonym: word_synonym
    word_translation: word_translation

    ScrollView:
        BoxLayout:
            id: box_layout
            orientation: 'vertical'
            size_hint_y: None

            ScrollLabel:
                color: font_color
                font_size: '30dp'
                halign: 'center'
                id: word_name
                padding: '0dp', '40dp'
                text: 'name'

            ScrollLabel:
                color: font_color
                font_size: '15dp'
                halign: 'center'
                id: word_level
                padding: '0dp', '10dp'
                text: 'level'

            ScrollLabel:
                color: font_color
                font_size: '25dp'
                padding: '5dp', '5dp'
                text: 'Translation'

            LineSeparator:

            ScrollLabel:
                color: font_color
                font_size: '17dp'
                id: word_translation
                padding: '30dp', '10dp'
                text: 'translation'

            ScrollLabel:
                color: font_color
                font_size: '25dp'
                padding: '5dp', '5dp'
                text: 'Definition'

            LineSeparator:

            ScrollLabel:
                color: font_color
                font_size: '17dp'
                id: word_meaning
                padding: '30dp', '10dp'
                text: 'meaning'

            ScrollLabel:
                color: font_color
                font_size: '25dp'
                padding: '5dp', '5dp'
                text: 'Synonyms'

            LineSeparator:

            ScrollLabel:
                color: font_color
                font_size: '17dp'
                id: word_synonym
                padding: '30dp', '10dp'
                text: 'synonym'

            ScrollLabel:
                color: font_color
                font_size: '25dp'
                padding: '5dp', '5dp'
                text: 'Antonyms'

            LineSeparator:

            ScrollLabel:
                color: font_color
                font_size: '17dp'
                id: word_antonym
                padding: '30dp', '10dp'
                text: 'antonym'

            ScrollLabel:
                color: font_color
                font_size: '25dp'
                padding: '5dp', '5dp'
                text: 'Examples'

            LineSeparator:

            ScrollLabel:
                color: font_color
                font_size: '17dp'
                id: word_examples
                padding: '30dp', '10dp'
                text: 'example'

            Widget:
                height: '30dp'
                size_hint: 1, None

            TextInput:
                height: '50dp'
                id: level_input
                size_hint_y: None
                text: 'Change level'

            Button:
                background_color: button_color
                color: font_color
                height: '50dp'
                id: submit_button
                on_press: self.background_color = button_pressed_color
                on_release: self.background_color = button_color
                size_hint_y: None
                text: 'Submit'